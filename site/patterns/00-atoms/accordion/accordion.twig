<div class="accordion">
    <div class="accordion__container js-accordion">
        {% for item in accordion %}
        <div class="accordion__item">
            <div class="accordion__header js-accordion__toggle">
                <svg class="accordion__icon" width="42px" height="42px">
                    <use xlink:href="#arrow-down"></use>
                </svg>
                <h2 class="accordion__heading">{{ item.title|raw }}</h2>
            </div>
            <div class="accordion__content">
                <div class="accordion__content-container">
                    {{ item.text|raw }}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div> <!-- /accordion -->
